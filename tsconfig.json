{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "CommonJS",
    "lib": ["dom", "es2015", "es5", "es6"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "rootDir": "src",
    
    /* Strict Type-Checking Options */
    "strict": true,
    "alwaysStrict": true,

    /* Module Resolution Options */
    "esModuleInterop": true,
    
    /* Advanced Options */
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["**/src/**/*.spec.ts", "lib"]
}